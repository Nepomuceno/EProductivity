@model System.Linq.IQueryable<EProductivity.Web.Controllers.ResponsabilityViewModel>

@{
    ViewBag.Title = "Area";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-8 col-md-8">
    <div class="block-flat">
        <div class="header">
            <h3>Responsabilidades para a area @ViewBag.Area.Name</h3>
        </div>
        <div class="content">
            <div class="table-responsive">
                <table class="table no-border hover">
                    <thead class="no-border">
                        <tr>
                            <th><strong>Nome</strong></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="no-border-y">
                        @{
                            foreach (var workerViewModel in Model)
                            {
                                <tr>
                                    <td>@workerViewModel.Name</td>
                                    <td><a class="btn btn-danger btn-flat btn-sm"><strong>x</strong> Excluir</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
