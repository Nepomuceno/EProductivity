@model IQueryable<EProductivity.Web.Controllers.ActivityViewModel>

@{
    ViewBag.Title = "Atividades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-8 col-md-8">
    <div class="block-flat">
        <div class="header">
            <h3>@ViewBag.Title</h3>
        </div>
        <div class="content">
            <div class="table-responsive">
                <table class="table no-border hover">
                    <thead class="no-border">
                        <tr>
                            <th><strong>Nome</strong></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="no-border-y">
                        @{
                            foreach (var workerViewModel in Model)
                            {
                                <tr>
                                    <td>@workerViewModel.Name</td>
                                    <td><a class="btn btn-danger btn-flat btn-sm" href="@Url.Action("Delete","Activities",new { id= workerViewModel.Id})"><strong>x</strong> Excluir</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="col-sm-4 col-md-4">
    <a href="@Url.Action("Create","Activities")" class="btn btn-primary btn-lg">Cadastrar</a>
</div>