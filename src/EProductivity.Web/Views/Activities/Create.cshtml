@model dynamic

@{
    ViewBag.Title = "Nova atividade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-8 col-md-8">
    <div class="block-flat">
        <div class="header">
            <h3>@ViewBag.Title</h3>
        </div>
        <div class="content">
            @using (Html.BeginForm("Create", "Activities", null, FormMethod.Post, new Dictionary<string, object> { { "class", "form-horizontal" } }))
            {
                <div class="form-group">
                    <label class="col-sm-3 control-label" for="name">Nome</label>
                    <div class="col-sm-7">
                        <input class="form-control" id="name" required name="name" type="text" placeholder="Nome">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-primary" type="submit">Salvar</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>