@model System.Linq.IQueryable<EProductivity.Web.Controllers.AreaViewModel>

@{
    ViewBag.Title = "Areas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="table-responsive">
    <table class="table no-border hover">
        <thead class="no-border">
            <tr>
                <th><strong>Nome</strong></th>
                <th><strong># Reponsabilidades</strong></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody class="no-border-y">
            @{
                foreach (var workerViewModel in Model)
                {
                    <tr>
                        <td>@workerViewModel.Name</td>
                        <td>@workerViewModel.TotalResponsabilities</td>
                        <td><a class="btn btn-primary btn-flat btn-sm"><i class="fa fa-info"></i> Detalhes</a></td>
                        <td><a class="btn btn-danger btn-flat btn-sm"><strong>x</strong> Excluir</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>