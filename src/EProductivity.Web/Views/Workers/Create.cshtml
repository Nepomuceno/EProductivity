
@{
    ViewBag.Title = "Novo trabalhador";
}

<div class="col-sm-6 col-md-6">
    <div class="block-flat">
        <div class="header">
            <h3>@ViewBag.Title</h3>
        </div>
        <div class="content">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-sm-3 control-label" for="name">Nome</label>
                    <div class="col-sm-7">
                        <input class="form-control" id="name" required name="name" type="text" placeholder="Nome" >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label" for="responsability">Responsabilidade</label>
                    <div class="col-sm-7">
                        <input class="form-control" id="responsability" required type="text" placeholder="Responsabilidade">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-primary" type="submit">Registrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts
{
    
}
